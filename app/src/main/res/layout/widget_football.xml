<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green13" >
    <!-- note - native color of app is green - lets stay with theme -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_title_height"
        android:gravity="center"
        android:id="@+id/widget_title"
        android:textSize="@dimen/widget_title_size"
        android:textColor="@android:color/black"
        android:text="@string/title_widget_footballscores" />
    
    <ListView
        android:id="@+id/widget_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/widget_no_data"
        android:textColor="@android:color/black"
        android:textSize="@dimen/widget_empty_size"
        android:visibility="gone" />

</LinearLayout>